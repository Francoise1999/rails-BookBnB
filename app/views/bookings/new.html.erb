<div class="container p-4">
  <h2 class="my-4">Create your booking</h2>
  <div class="form-booking">
    <%= simple_form_for [@book, @booking] do |f| %>
      <%= f.input :date %>
      <%= f.submit "Create", class: "btn button-6 my-3" %>
    <% end %>

    <%= link_to "Back", books_path, class:"btn button-6 my-3" %>

  </div>

</div>
